<% title_tag_set('ログインページ') %>
<h1>ログイン</h1>

<div class='login'>
  <%= form_with scope: :session, url: login_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>


  <%= form.label :remember_me, class: "checkbox inline" do %>
    <%= form.check_box :remember_me %>
    <span>ログイン状態を記憶する</span>
  <% end %>

  <%= form.submit 'ログイン', class:'btn btn-primary' %>
  <% end %>


  <p><%= link_to '新規登録はこちら', 'users/new' %></p>

    <div class="test_user_login">
      <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
      <%= form.hidden_field :email, {value: 'testuser@example.com'} %>
      <%= form.hidden_field :password, {value: 'password'} %>
      <%= form.submit 'テストユーザーとしてログイン', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

      
