<% title_tag_set("投稿画像の編集")%>

<h1>投稿画像の編集</h1>

<div>
  <%= link_to '投稿の画像一覧へ戻る', post_images_path %>
</div>

<div class='post_content'>
  <h3>投稿内容</h3>
  <p><%= @post.content %></p>
</div>

<%= form_with model: @image, url: post_image_path(@post, @image), local: true do |form| %>
<%= render 'shared/error_messages',object: form.object %>


<div class='form'>
  <div class= "form-group">
    <%= form.label :new_data %>
    <%= form.file_field :new_data %>
  </div>

  <div class="form-group">
    <%= form.label :alt_text %>
    <%= form.text_field :alt_text, class: 'form-control' %>
  </div>

  <%= form.submit class:'btn btn-primary'%>
</div>
<% end %>