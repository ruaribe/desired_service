<% if !@posts.nil? %>
  <div class="posts">
    <% @posts.each do |post| %>
      <%= render partial: 'posts/post', locals: { post: post,
                                                   user_path: admin_user_path(post.user),
                                                   post_path: admin_post_path(post) } %>
    <% end %>
  </div>
<% end%>