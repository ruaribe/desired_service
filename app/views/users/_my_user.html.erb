<table>
<tr>
  <th>ユーザー名</th>
  <td><%= current_user.name %></td>
</tr>
<tr>
  <th>メールアドレス</th>
  <td><%= current_user.email %></td>
</tr>
<tr>
  <th>性別</th>
  <td><%= current_user.sex == 0 ? '未設定' : current_user.sex == 1 ? '男' : '女' %></td>
</tr>
<tr>
  <th>生年月日</th>
  <td><%= current_user.birthday&.strftime("%Y年%m月%d日") %></td>
</tr>
</table>

<%= render 'shared/post_form'%>